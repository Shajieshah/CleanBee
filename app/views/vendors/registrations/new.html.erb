<style>
  .style_image {
    height: 100px;
    width: 30%;
  }
</style>

<div class="container">
  <div class="row p-4">
    <div class="col-sm-4"></div>
    <div class="col-sm-4 d-flex justify-content-center">
      <%= image_tag 'logo.png', alt: 'logo', class: "style_image" %>
    </div>
    <div class="col-sm-4"></div>
  </div>


  <div class="row">
    <div class="col-sm-4"></div>

    <div class="col-sm-4 p-4" style="background-color: white; border-radius: 10px 10px 10px 10px;">
      <center><h3>Register</h3></center>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render 'layouts/error_messages', object: f.object %>
        <div class="form-group">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control mt-4 p-2', style: 'border-radius: 10px 10px 10px 10px; box-shadow: none;', placeholder: 'Business Email', required: true %>
        </div>
        <div class="form-group">
          <%= f.text_field :user_name, autofocus: true, autocomplete: "email", class: 'form-control p-2', style: 'border-radius: 10px 10px 10px 10px; margin-top: 10px; box-shadow: none;', placeholder: 'Full name', required: true %>
        </div>
        <div class="form-group">
          <%= f.password_field :password, autocomplete: 'new-password', class: 'form-control p-2', style: 'border-radius: 10px 10px 10px 10px; margin-top: 10px; box-shadow: none;', placeholder: 'Password', required: true %>
        </div>
        <div class="form-group">
          <%= f.password_field :password_confirmation, autocomplete: 'new-password', class: 'form-control p-2', style: 'border-radius: 10px 10px 10px 10px; margin-top: 10px; box-shadow: none;', placeholder: 'Repeat Password', required: true %>
        </div>
        <div class="form-group">
          <%= f.text_field :phone, autofocus: true, autocomplete: "email", class: 'form-control p-2', style: 'border-radius: 10px 10px 10px 10px; margin-top: 10px; box-shadow: none;', placeholder: 'Phone number', required: true %>
        </div>

        <%= f.submit 'Proceed', class: 'btn btn-lg btn-block p-2', style: 'border-radius: 10px 10px 10px 10px; background-color: #0af2d3; margin-top: 10px; box-shadow: none;' %>
      <% end %>
      <a href="" style="text-decoration: none; color: black;" class="d-flex justify-content-center p-2" disabled>Already
        have an account?</a>
      <%= link_to 'Sign in', new_session_path(resource_name), class: 'btn btn-lg btn-block', style: 'border-radius: 10px 10px 10px 10px; background-color: #6832a8; color: white; box-shadow: none;' %>

    </div>

  </div>
</div>