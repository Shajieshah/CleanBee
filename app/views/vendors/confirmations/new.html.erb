<div class="container">

	<div class="row p-4">
		<div class="col-sm-4"></div>
		<div class="col-sm-4 d-flex justify-content-center">
			<%= image_tag 'logo.png', style: 'width: 30%', alt: 'logo' %>
		</div>
		<div class="col-sm-4"></div>
	</div>

	<div class="row">

		<div class="col-sm-4"></div>

		<div class="col-sm-4 mt-4 p-4" style="background-color: white; border-radius: 10px 10px 10px 10px;">

			<center><h3 style="font-family: Lato-regular;">Resend confirmation instructions</h3></center>


			<%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>

				<div class="form-group">
					<%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control mt-4 p-2', style: 'border-radius: 10px 10px 10px 10px; box-shadow: none;', required: true, placheholder: 'Email', value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email) %>
				</div>

				<div class="actions">
					<%= f.submit "Resend confirmation instructions", class: 'btn btn-lg btn-block', style: 'border-radius: 10px 10px 10px 10px; background-color: #6832a8; color: white; box-shadow: none;' %>
				</div>

			<% end %>

			<a style="text-decoration: none; color: black;" class="d-flex justify-content-center p-2" disabled>Already have an account?</a>

			<%= link_to 'Sign in', new_session_path(resource_name), class: 'btn btn-lg btn-block', style: 'border-radius: 10px 10px 10px 10px; background-color: #6832a8; color: white; box-shadow: none;' %>

			<a style="text-decoration: none; color: black;" class="d-flex justify-content-center p-2">Don't have an account?</a>

			<%= link_to 'Register', new_registration_path(resource_name), class: 'btn btn-lg btn-block', style: 'border-radius: 10px 10px 10px 10px; background-color: #6832a8; color: white; box-shadow: none;' %>
			
		</div>

	</div>

</div>