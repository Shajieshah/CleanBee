<div class="container">
  <div class="row pt-5">
    <div class="col-sm-4"></div>
    <div class="col-sm-4 d-flex justify-content-center">
      <%= image_tag 'logo.png', class: "img_1", alt: 'logo' %>
    </div>
    <div class="col-sm-4"></div>
  </div>
  <div class="row">
    <div class="col-sm-4"></div>
    <div class="col-sm-4 mt-4 p-4 dive_style">
      <center><h3>Sign In</h3></center>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group alpha_t">
          <%= f.email_field :email, class: 'form-control mt-4 p-2 aplah_1', placeholder: 'Email Adderss', required: true %>
        </div>

        <div class="form-group">
          <%= f.password_field :password, class: 'form-control mt-3 p-2 aplah_1', placeholder: 'Password', required: true %>
        </div>
        <%= link_to 'Forgot your password?', new_password_path(resource_name), class: 'd-flex justify-content-end p-0 alpha' %>
        <%= f.submit 'Sign in', class: 'btn btn-lg btn-block mt-2 alpha_2', data: {disable_with: "Proceeding..."} %>
      <% end %>
      <%= link_to "Don't have an account?", new_registration_path(resource_name), class: 'd-flex justify-content-center p-2 alpha1' %>
      <%= link_to 'Register', new_registration_path(resource_name), class: 'btn btn-lg btn-block alpha_3' %>
    </div>
    <div class="col-sm-4"></div>
  </div>
</div>