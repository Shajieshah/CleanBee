<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css" rel="stylesheet">

<style type="text/css">
	.dropdown-container {
		display: none;
	}
</style>

<div class="home">
	<div class="container-fluid display-table" style="padding-left: 0;">
		<div class="row display-table-row">

			<%= render 'shared/sidebar' %>

			<div class="col-md-10 col-sm-11 display-table-cell v-align" style="background-color: #F5F5F5;height: 665px">
				<%= render 'shared/navbar' %>

				<div class="user-dashboard" style="background-color: white; margin:80px">

					<div class="" style="padding: 20px; padding-top: 10px;">

						<ul class="nav nav-tabs" id="myTab" role="tablist">
							<li class="nav-item">
								<a class="nav-link active" id="new_order_tab" data-toggle="tab" href="#new_orders" role="tab" aria-controls="new_orders" aria-selected="true">New Orders</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" id="on_going_tab" data-toggle="tab" href="#on_going" role="tab" aria-controls="on_going" aria-selected="false">On Going Orders</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" id="completed_order-tab" data-toggle="tab" href="#completed_order" role="tab" aria-controls="completed_order" aria-selected="false">Order History</a>
							</li>
						</ul>
						<div class="tab-content" id="myTabContent">
							<div class="tab-pane fade show active" id="new_orders" role="tabpanel" aria-labelledby="new_order_tab">
                <%= render 'shared/new_orders' %>
							</div>

							<div class="tab-pane fade" id="on_going" role="tabpanel" aria-labelledby="on_going_tab">
                <%= render 'shared/ongoing_orders' %>
							</div>

              <div class="tab-pane fade" id="completed_order" role="tabpanel" aria-labelledby="completed_order-tab">
                <%= render 'shared/completed_orders' %>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>