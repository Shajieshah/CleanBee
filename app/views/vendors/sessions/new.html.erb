<style>
  .style_image {
    height: 100px;
    width: 30%;
  }
</style>
<div class="container">
  
  <div class="row p-4">
    <div class="col-sm-4"></div>
    <div class="col-sm-4 d-flex justify-content-center">
      <%= image_tag 'logo.png', class: "style_image", alt: 'logo' %>
    </div>
    <div class="col-sm-4"></div>
  </div>

  <div class="row">
    <div class="col-sm-4"></div>
    <div class="col-sm-4 mt-4 p-4" style="background-color: white; border-radius: 10px 10px 10px 10px;">
      
      <center><h3 style="font-family: Lato-regular;">Sign In</h3></center>
      
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <div class="form-group">
        <%= f.email_field :email, class: 'form-control mt-4 p-2', style: 'border-radius: 10px 10px 10px 10px; box-shadow: none;', placeholder: 'Email Adderss', required: true %>
      </div> 
      <div class="form-group">
        <%= f.password_field :password, class: 'form-control mt-3 p-2', style: 'border-radius: 10px 10px 10px 10px; box-shadow: none;', placeholder: 'Password', required: true %>
      </div>
    
      <%= link_to 'Forgot your password?', new_password_path(resource_name), class: 'd-flex justify-content-end p-0', style: 'text-decoration: underline; color: black;' %>
      <%= f.submit 'Sign in', class: 'btn btn-lg btn-block mt-2', style: 'border-radius: 10px 10px 10px 10px; background-color: #0af2d3; box-shadow: none;' %>
        
      <% end %>

      <a href="#" style="text-decoration: none; color: black;" class="d-flex justify-content-center p-2">Don't have an account?</a>
      <%= link_to 'Register', new_registration_path(resource_name), class: 'btn btn-lg btn-block', style: 'border-radius: 10px 10px 10px 10px; background-color: #6832a8; color: white; box-shadow: none;' %>
    </div>
    <div class="col-sm-4"></div>
  </div>
</div>
